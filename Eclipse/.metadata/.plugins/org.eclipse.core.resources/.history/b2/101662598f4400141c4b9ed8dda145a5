package levels;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;

public class CreateLevels {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	private String adresse = "007.txt";
	private String [] brett;
	
	public void LoadLevel(){
			
			//Lager en midlertidig Arraylist med strenger. Hver streng er en rad p[ brettet
			ArrayList<String> linjer = new ArrayList<String>();
			
			  try {
				   File file = new File(adresse);
				   Scanner scanner = new Scanner(file);
				   while (scanner.hasNext()) {
					   
				    
				    linjer.add(scanner.nextLine());
				   }
				   scanner.close();
				  } catch (FileNotFoundException e) {
				   e.printStackTrace();
				  }
			  
			  	
			  	//Gj√∏r om fra arraylisten til String[]
				 this.brett = new String[linjer.size()];
				  
				 for (int l = 0; l < linjer.size(); l ++){
					 brett[l] = linjer.get(l);
					 System.out.println(linjer.get(l));
				 }
	
		}

}
